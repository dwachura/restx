{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://dwsoft.io/restexception/v1/schema/Error",
    "title": "Error",
    "description": "A representation of a single error that happened during execution of a process, e.g., validation of a field or parameter",
    "type": "object",
    "properties": {
        "code": {
            "description": "Code to identify type of error",
            "type": "string"
        },
        "message": {
            "description": "Human-readable description of an error",
            "type": "string"
        },
        "source": {
            "$ref": "#/definitions/ErrorSource"
        }
    },
    "required": ["code", "message"],
    "definitions": {
        "ErrorSource": {
            "type": "object",
            "properties": {
                "type": {
                    "description": "Type of an error's source (e.g., query param or request body)",
                    "type": "string",
                    "enum": ["query", "path", "header", "body"]
                },
                "location": {
                    "description": "Concrete location of an error's source in a request (e.g., path to a JSON property or name of a query parameter)",
                    "type": "string",
                    "minLength": 1
                }
            },
            "required": ["type", "location"]
        }
    },
    "examples": [
        {
            "code": "REQUIRED_VALUE_MISSING",
            "message": "Value of parameter 'foo' is missing",
            "source": {
                "type": "query",
                "location": "foo"
            }
        },
        {
            "code": "REQUIRED_VALUE_MISSING",
            "message": "Value of property 'bar' is missing",
            "source": {
                "type": "body",
                "location": "$.foo.bar"
            }
        },
        {
            "code": "ISE_ABC123",
            "message": "Internal Server Error"
        }
    ]
}